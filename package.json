{
  "name": "be",
  "version": "1.0.0",
  "description": "Backend",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npx tsc && npx tsc-alias",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"node -r tsconfig-paths/register --require ts-node/register src/index.ts\"",
    "dev-js": "concurrently 'npx tsc -w' 'npx tsc-alias -w' 'node dist/src/index.js'",
    "start": "node dist/src/index.js",
    "format": "npx prettier src test --write",
    "lint": "npx eslint src test --ext .ts --fix",
    "pg-to-ts": "pg-to-ts generate -c ${DB_CONNECTION_STRING} -o src/generated/database.ts",
    "migrate:up": "DATABASE_URL=\"${DB_CONNECTION_STRING}\" node-pg-migrate up",
    "api-to-html": "yarn redocly build-docs api/swagger.yaml -o api/index.html",
    "api-to-ts": "yarn openapi --input api/swagger.yaml --output src/generated/api",
    "prepare": "husky",
    "package-deps": "mkdir -p dist/layers/deps-layer/nodejs && cp package.json yarn.lock dist/layers/deps-layer/nodejs && cd dist/layers/deps-layer/nodejs && yarn --production --frozen-lockfile",
    "test": "jest"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.574.0",
    "@types/pg": "^8.11.4",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "convict": "^6.2.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.4.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "serverless-http": "^3.0.2",
    "tsc-alias": "^1.8.8",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.3",
    "@redocly/cli": "^1.12.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.2",
    "@types/convict": "^6.1.6",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.4.1",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.0",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^3.1.0",
    "openapi-typescript-codegen": "^0.29.0",
    "pg-to-ts": "^4.1.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsconfig-paths": "^4.2.0"
  }
}
